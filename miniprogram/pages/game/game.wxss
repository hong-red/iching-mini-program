/* pages/game/game.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8fcfd, #eaf4f7); /* Blue gradient from knowledge page */
  font-family: 'KaiTi', cursive, sans-serif;
  color: #333;
}

/* 卦象显示卡片 */
.gua-display-card {
  width: 300rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.12); /* Stronger shadow */
}

.initial-question-mark {
  font-size: 180rpx;
  color: #ccc;
  font-weight: bold;
}

.generated-gua-symbol {
  font-size: 120rpx; /* Make it large and prominent */
  font-weight: bold;
  color: #4a90e2; /* Blue color for consistency */
  text-shadow: 2rpx 2rpx 5rpx rgba(74, 144, 226, 0.3); /* Subtle shadow for depth */
}

.generated-gua-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 信息卡片 (等待摇卦/卦象解释) */
.info-card {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4a90e2; /* Blue color */
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 10rpx;
}

.info-text:last-of-type {
  margin-bottom: 0;
}

/* AI智能解释（特殊卡片） */
.ai-explain-card, .ai-loading-card {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #f8fcfd; /* Light blue background */
  border-radius: 15rpx;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  text-align: left;
}

.ai-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 15rpx;
}

.ai-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #555;
}

.ai-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
  text-align: right;
}

.loading-text {
  font-size: 30rpx;
  color: #888;
  text-align: center;
}

.bian-gua-transition {
  margin-top: 30rpx;
  color: #888;
  font-size: 28rpx;
  text-align: center;
}

.bian-gua-transition text {
  display: block;
  font-size: 48rpx; /* Larger arrow */
  margin-bottom: 10rpx;
  color: #4a90e2; /* Blue color */
  font-weight: bold;
  animation: bounce 1s infinite; /* Add a subtle bounce animation */
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.bian-gua-explanation {
  color: #666;
  font-size: 30rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30rpx; /* Increased gap */
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
}

.action-button {
  flex: 1 1 calc(50% - 15rpx); /* 两列布局，调整flex-basis */
  min-width: 280rpx;
  height: 100rpx; /* Fixed height for buttons */
  background-color: #4a90e2; /* Blue color */
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3); /* Blue shadow */
  transition: all 0.3s ease;
  display: flex; /* Center text vertically */
  justify-content: center;
  align-items: center;
}

.action-button.shake-button {
  background-color: #4a90e2; /* Primary blue */
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
}

.action-button.save-button {
  background-color: #5cb85c; /* Green for save */
  box-shadow: 0 8rpx 20rpx rgba(92, 184, 92, 0.3);
}

.action-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 历史记录区 */
.history-toggle {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 35rpx; /* Increased padding */
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #4a90e2; /* Blue color */
  font-weight: bold;
}

.history-toggle text:first-child {
  font-size: 34rpx; /* Slightly larger for better readability */
  color: #333; /* Darker for contrast */
}

.history-toggle text:last-child {
  font-size: 36rpx; /* Larger arrow */
  color: #4a90e2; /* Blue color */
  font-weight: bold;
}

.history-list {
  width: 100%;
  max-width: 600rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
}

.history-item {
  padding: 18rpx 0; /* Increased padding */
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #555;
}

.history-item:last-child {
  border-bottom: none;
}
