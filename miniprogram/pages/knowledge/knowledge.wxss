/* pages/knowledge/knowledge.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8fcfd, #eaf4f7); /* 柔和的浅蓝色渐变背景 */
  font-family: 'KaiTi', cursive, sans-serif;
  color: #333;
}

/* 顶部搜索和进度条 */
.header-section {
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #f0f5f7;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: #555;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.progress-bar-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.progress-bar {
  /* width: 100%; */ /* Width is now set dynamically via style attribute */
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #4a90e2; /* Active color for the progress */
  transition: width 0.3s ease-in-out;
}

/* 卦象卡片网格 */
.gua-card-scroll-view {
  flex: 1;
  width: 100%;
}

.gua-card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 每行2个卡片 */
  gap: 30rpx;
}

.gua-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  transition: transform 0.2s ease;
}

.gua-card:active {
  transform: translateY(2rpx);
}

.gua-symbol {
  font-size: 80rpx;
  line-height: 1;
  color: #4a90e2; /* 蓝色调 */
  margin-bottom: 15rpx;
}

.gua-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.gua-meaning {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.gua-hint {
  font-size: 24rpx;
  color: #999;
}
