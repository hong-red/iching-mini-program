/* pages/index/index.wxss */
.container {
  padding: 0;
  text-align: center;
  background: linear-gradient(to bottom, #fdf5e6, #ffe4e1); /* 柔和的背景色 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部区域 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.header-left {
  width: 80rpx; /* 占位 */
}

.header-center {
  font-size: 48rpx;
  color: #8b4513; /* 棕色系，更显古朴 */
  font-family: 'KaiTi', cursive; /* 楷体或手写体 */
  font-weight: bold;
}

.header-right {
  display: flex;
  align-items: center;
}

.bell{
  position: relative;
}

.bell-dot{
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  background: #e34d59;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.avatar-placeholder, .bell-placeholder {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  background-color: #d3d3d3; /* 占位符颜色 */
}

/* 轮播图区域 */
.swiper-container {
  width: 100%;
  height: 400rpx; /* 轮播图高度 */
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.swiper-image {
  width: 100%;
  height: 100%;
  display: block;
}

.swiper-text {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.4);
  padding: 10rpx 0;
}

/* 功能卡片区域 */
.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2列布局 */
  gap: 30rpx; /* 卡片间距 */
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.card {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.card:active {
  transform: translateY(5rpx);
}

.card-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  background-color: #eee; /* 占位符颜色 */
  border-radius: 50%;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}
