/* pages/aiStory/aiStory.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8fcfd, #eaf4f7); /* Blue gradient from knowledge page */
  font-family: 'KaiTi', cursive, sans-serif;
  color: #333;
}

.header {
  width: 100%;
  max-width: 700rpx;
  text-align: center;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.header .title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4a90e2;
}

.story-card {
  width: 100%;
  max-width: 700rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
  line-height: 1.8;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  display: block;
  padding: 50rpx 0;
}

.story-content {
  font-size: 34rpx;
  color: #333;
}

.ai-tip {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
}