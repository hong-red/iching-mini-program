/* pages/knowledgeDetail/knowledgeDetail.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 60rpx; /* Increased padding */
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8fcfd, #eaf4f7);
  font-family: 'KaiTi', cursive, sans-serif;
  color: #333;
}

.gua-symbol-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx; /* Adjusted margin */
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 50rpx; /* Adjusted padding */
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.12); /* Stronger shadow */
}

.gua-name-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx; /* Adjusted margin */
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx; /* Adjusted padding */
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.gua-symbol-as-image {
  font-size: 180rpx; /* Larger font size for the symbol */
  font-weight: bold;
  color: #4a90e2; /* Blue color for the symbol */
  line-height: 1; /* Adjust line height to prevent extra space */
}

.gua-name {
  font-size: 48rpx; /* Larger font size for the name */
  font-weight: bold;
  color: #333;
  margin-top: 20rpx; /* Space between symbol and name */
}

.gua-section {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx; /* Increased padding */
  margin-bottom: 40rpx; /* Increased margin */
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 40rpx; /* Increased font size */
  font-weight: bold;
  color: #4a90e2; /* Changed to blue */
  margin-bottom: 15rpx;
  display: block;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.section-content {
  font-size: 32rpx; /* Increased font size */
  line-height: 1.6;
  color: #555;
  text-align: justify;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

.collect-button {
  background-color: #4a90e2; /* Blue color */
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 36rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: background-color 0.3s ease;
}

.collect-button:active {
  background-color: #3a7bd5; /* Darker blue on active */
}

.ai-explanation-toggle-button {
  background-color: #4a90e2; /* Blue color */
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 32rpx; /* Slightly smaller than collect button */
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: background-color 0.3s ease;
  width: 100%; /* Make it full width */
  box-sizing: border-box; /* Include padding in width */
}

.ai-explanation-toggle-button:active {
  background-color: #3a7bd5; /* Darker blue on active */
}
